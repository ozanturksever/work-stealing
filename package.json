{
  "name": "@convex-dev/work-stealing",
  "version": "0.1.0",
  "description": "Work-stealing pattern for distributed CLI workers coordinated by Convex",
  "keywords": [
    "convex",
    "component",
    "work-stealing",
    "distributed",
    "workers",
    "job-queue"
  ],
  "homepage": "https://github.com/get-convex/work-stealing#readme",
  "bugs": {
    "url": "https://github.com/get-convex/work-stealing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/get-convex/work-stealing.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./convex.config": {
      "types": "./dist/component/convex.config.d.ts",
      "import": "./dist/component/convex.config.js"
    },
    "./_generated/component": {
      "types": "./dist/component/_generated/component.d.ts",
      "import": "./dist/component/_generated/component.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./client/worker": {
      "types": "./dist/client/worker.d.ts",
      "import": "./dist/client/worker.js"
    },
    "./test": {
      "types": "./dist/test.d.ts",
      "import": "./dist/test.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "codegen": "convex codegen --component-dir ./src/component",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "convex-helpers": "^0.1.0"
  },
  "peerDependencies": {
    "convex": "^1.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "convex": "^1.17.0",
    "typescript": "^5.0.0"
  }
}
